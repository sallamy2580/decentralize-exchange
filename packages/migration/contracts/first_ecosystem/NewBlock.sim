// +prop AppID = '1'
// +prop Conditions = 'ContractConditions("MainCondition")'
contract NewBlock {
    data {
        ApplicationId int
        Name string
        Value string
        Conditions string
    }

    action {
        DBInsert("blocks", {name: $Name, value: $Value, conditions: $Conditions,
              app_id: $ApplicationId})
    }
}
